{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "custom_types"
  ],
  "baseUrl": ".",
  "paths": {
    "@screens/*": [
      "screens/*"
    ],
    "@assets/*": [
      "assets/*"
    ],
    "@components/*": [
      "components/*"
    ],
  },
  "extends": "expo/tsconfig.base"
}